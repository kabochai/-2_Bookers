<h1><strong>Editing Books</strong></h1>

<%= form_with model: @book do |f| %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, class: "book_title" %>
  </div>

  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body, class: "book_body" %>
  </div>

  <div class="actions">
    <%= f.submit 'Update Book', class: "submit" %>
  </div>

<% end %>

<%= link_to "Show", book_path(@book.id) %>
 |
<%= link_to "Back", books_path %>